{% extends 'identification.html.twig' %}
{% block body %}
    <div class="card p-2">
        <div class="card-body">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form class="form-signin" action="{{ path('login') }}" method="post">
                <h3 class="form-signin-heading">Authentification</h3>
                <div class="input-group mb-3">
                        <input type="text" class="form-control" id="username" placeholder="Identifiant" name="_username"
                               value="{{ last_username }}"/>
                </div>
                <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Mot de passe" id="password"
                               name="_password"/>
                </div>
                <input type="hidden" name="_target_path" value="{{ path('admin_homepage') }}"/>
                <button class="btn btn-primary shadow-2 mb-4" type="submit"><i class="fa fa-sign-in-alt"></i> Se
                    connecter
                </button>
            </form>
        </div>
    </div>
    <div class="card   py-3 hidden-md-down">
        <div class="card-body text-center">
            <div>
                <h2 class="card-title">PROGESCO</h2>
                <p class="card-text">L'application dédiée à la gestion de votre établissement</p>
            </div>
        </div>
    </div>
{% endblock %}