<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>{% block title %}{{ app_title | raw }}{% endblock %}</title>
{% block stylesheets %}
<link rel="icon" href="{{ asset('favicon.ico') }}" />
<link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
{% endblock %}
</head>

<body>
	<!-- block header -->
	{% block header %}
	<div class="site-header container-fluid">
		<header class="">
			<div class="row flex-nowrap justify-content-between align-items-center">
				<div class="col-3 pt-1">
					<a href=""><img src="{# asset('build/images/logo.png')#}"></a>
				</div>
				<div class="col-6 text-center white-text">
					 <h3>{{ app_title | raw }}</h3>                                  
				</div>
				<div class="col-3 d-flex justify-content-end align-items-center"></div>
			</div>
		</header>
	</div>

	{% endblock %}
	<!-- fin block header -->
	<!-- block body -->
	<div class="container mb-6">
		<div class="row">
			<div class="col-sm-12">
                            <div class="mx-auto" style="width: 600px;">
				{% block body %}
				{% endblock %}
                            </div>
			</div>
		</div>
	</div>
        <footer class="footer">
            <div class="container text-center">
                <span class="text-center small"> {{ app_copyright | raw }} <small>{{ app_version }}</small> </span>
            </div>
        </footer>
	<!-- fin block body -->
	{% block javascripts %}
	<script src="{{ asset('build/js/app.js') }}"></script>
	{% endblock %}
</body>
</html>