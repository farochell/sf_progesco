<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ app_title | raw }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('build/runtime.js') }}"></script>
        <script src="{{ asset('build/js/app.js') }}"></script>
    {% endblock %}
</head>
<body>
<div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <h3>{{ app_title | raw }}</h3>
        </div>

        <ul class="list-unstyled components">
            <!-- MENU CONFIGURATION -->
            <li class="active">
                <a href="#configurationSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                    <i class="fas fa-cogs"></i>
                    <span class="CTAs lead">Configuration</span>
                </a>
                <ul class="collapse list-unstyled" id="configurationSubmenu">
                    <li>
                        <a href="{{ path('gender_homepage') }}">Genres</a>
                    </li>
                    <li>
                        <a href="{{ path('marital-status_homepage') }}">Situations maritales</a>
                    </li>
                    <li>
                        <a href="{{ path('organization_homepage') }}">Etablissement</a>
                    </li>
                </ul>
            </li>
            <!-- MENU SALLE DE COURS -->
            <li class="active">
                <a href="#classroomSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                    <i class="fas fa-building"></i>
                    <span class="CTAs lead">Salles de classe</span>
                </a>
                <ul class="collapse list-unstyled" id="classroomSubmenu">
                    <li>
                        <a href="{{ path('classroom_homepage') }}">Salles</a>
                    </li>

                </ul>
            </li>

            <!-- MENU PEDAGOGY -->
            <li class="active">
                <a href="#pedagogySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                    <i class="fas fa-graduation-cap"></i>
                    <span class="CTAs lead">Pédagogie</span>
                </a>
                <ul class="collapse list-unstyled" id="pedagogySubmenu">
                    <li>
                        <a href="{{ path('schoolyear_homepage') }}">Années scolaires</a>
                    </li>
                    <li>
                        <a href="{{ path('semester_homepage') }}">Périodes scolaires</a>
                    </li>
                    <li>
                        <a href="{{ path('study_homepage') }}">Filières</a>
                    </li>
                    <li>
                        <a href="{{ path('level_homepage') }}">Niveaux</a>
                    </li>
                    <li>
                        <a href="{{ path('courseperiod_homepage') }}">Types de vacation</a>
                    </li>
                    <li>
                        <a href="{{ path('speciality_homepage') }}">Spécialités</a>
                    </li>
                    <li>
                        <a href="{{ path('teaching_homepage') }}">Matières</a>
                    </li>
                    <li>
                        <a href="{{ path('grade_homepage') }}">Classes</a>
                    </li>
                    <li>
                        <a href="{{ path('group_homepage') }}">Groupes</a>
                    </li>
                    <li>
                        <a href="{{ path('course_homepage') }}">Planification des cours</a>
                    </li>
                </ul>
            </li>

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER_SHOW') %}
                <!-- MENU TEACHER -->
                <li class="active">
                    <a href="#teacherSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-user-tie"></i>
                        <span class="CTAs lead">Professeurs</span>
                    </a>
                    <ul class="collapse list-unstyled" id="teacherSubmenu">
                        <li>
                            <a href="{{ path('teacher_homepage') }}">Liste des Professeurs</a>
                        </li>
                    </ul>
                </li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STUDENT_SHOW') %}
                <!-- MENU STUDENT -->
                <li class="active">
                    <a href="#studentSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-user-graduate"></i>
                        <span class="CTAs lead">Etudiants</span>
                    </a>
                    <ul class="collapse list-unstyled" id="studentSubmenu">
                        <li>
                            <a href="{{ path('student_homepage') }}">Liste des étudiants</a>
                        </li>
                    </ul>
                </li>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ACCOUNTING_SHOW') %}
                <!-- MENU ACCOUNTING -->
                <li class="active">
                    <a href="#accountingSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-money-bill-alt"></i>
                        <span class="CTAs lead">Comptabilité</span>
                    </a>
                    <ul class="collapse list-unstyled" id="accountingSubmenu">
                        <li>
                            <a href="{{ path('tuition_homepage') }}">Frais de scolarité</a>
                        </li>
                        <li>
                            <a href="{{ path('registration_to_be_valided_homepage') }}">Inscriptions à valider</a>
                        </li>
                        <li><span class="lead ml-4">Etudiants réguliers</span></li>
                        <li>
                            <a href="{{ path('payment_homepage') }}">Paiements</a>
                        </li>
                        <li>
                            <a href="{{ path('paymentplan_pending_operations') }}">Opérations en attente</a>
                        </li>
                        <li>
                            <a href="{{ path('paymentplan_valided_operations') }}">Opérations validées</a>
                        </li>
                        <li><span class="lead ml-4">Etudiants boursiers</span></li>
                        <li>
                            <a href="{{ path('scholarshippayment_homepage') }}">Paiements</a>
                        </li>
                        <li>
                            <a href="{{ path('scholarshippaymentplan_pending_operations') }}">Opérations en attente</a>
                        </li>
                        <li>
                            <a href="{{ path('scholarshippaymentplan_valided_operations') }}">Opérations validées</a>
                        </li>

                    </ul>
                </li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ACCOUNTING_SHOW') %}
                <!-- MENU EXPENSE -->
                <li class="active">
                    <a href="#expenseSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-money-bill-wave-alt"></i>
                        <span class="CTAs lead">Dépenses</span>
                    </a>
                    <ul class="collapse list-unstyled" id="expenseSubmenu">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('expensetype_homepage') }}">Types de dépense</a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('expenseline_homepage') }}">Dépenses</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <!-- MENU SECURITY -->
                <li class="active">
                    <a href="#securitySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-users-cog"></i>
                        <span class="CTAs lead">Sécurité</span>
                    </a>
                    <ul class="collapse list-unstyled" id="securitySubmenu">
                        <li>
                            <a href="{{ path('role_homepage') }}">Rôles</a>
                        </li>
                        <li>
                            <a href="{{ path('user_homepage') }}">Utilisateurs</a>
                        </li>
                    </ul>
                </li>
            {% endif %}
        </ul>
        <hr>
        <ul class="list-unstyled ">
            <li><a href="{{ path('logout') }}"><i
                            class="fas fa-sign-out-alt"></i> Se déconnecter</a></li>
        </ul>
    </nav>

    <!-- Page Content -->
    <div id="content">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg">
                <button type="button" id="sidebarCollapse" class="btn white-text text-lighten-4 blue-grey darken-1">
                    <i class="fas fa-align-justify"></i>
                </button>
            </nav>

            <div class="row">
                <div class="col-sm-12">
                    {{ wo_render_breadcrumbs({ viewTemplate: "breadcrumbs.html.twig" }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>

</div>

</body>
</html>